{% extends 'base.html.twig' %} {% block title %}Hello EventsController!{% endblock %} {% block body %}
<!--Hero-->
<div>
    <img src="{{event.image}}" width="100%" height="700">
</div>

<!--Content-->
<div class="container mt-5 ">

    <h3 class="text-center mt-5">{{event.name}}</h3>
    <hr>
    <div class="description">{{event.description}}</div>

    <div class="d-flex justify-content-between mt-5">
        <!--Info-->
        <div>
            {% if event.type == "art " %}
            <h4><i class="fa-solid fa-landmark me-2 "></i>{{organizer.name}}</h4>
            {% elseif event.type == "theater " %}
            <h4><i class="fa-solid fa-masks-theater me-2 "></i>{{organizer.name}}</h4>
            {% else %}
            <h4><i class="fa-solid fa-music me-2 "></i>{{organizer.name}}</h4>
            {% endif %}
            <div class="ms-5 ">
                <p>{{organizer.street}}</p>
                <p>{{organizer.city}}</p>
                <p><i class="fa-regular fa-envelope me-2 "></i>{{organizer.email}}</p>
                <p><i class="fa-solid fa-phone me-2 "></i>{{organizer.number}}</p>
            </div>
        </div>
        <!--iframe-->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2659.0729917208605!2d16.372873151210122!3d48.205209979126906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x476d079e0ce3c1f9%3A0x6352e7140c19382b!2sRonacher%20%23WeAreMusical!5e0!3m2!1sde!2sat!4v1670002829097!5m2!1sde!2sat"
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>

{% endblock %}