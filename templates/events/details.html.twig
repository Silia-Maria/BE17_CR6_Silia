{% extends 'base.html.twig' %} {% block title %}Hello EventsController!{% endblock %} {% block body %}
<!--Hero-->
<div>
    <img src="{{event.image}}" width="100%" height="700">
</div>

<!--Content-->
<div class="container mt-5 ">

    <h3 class="text-center mt-5">{{event.name}}</h3>
    <hr>
    <div class="description">{{event.description}}</div>

    <div class="d-flex justify-content-around mt-5">
        <!--Info-->
        <div class="align-self-center">
            {% if event.type == "art " %}
            <h4><i class="fa-solid fa-landmark me-2 "></i>{{organizer.name}}</h4>
            {% elseif event.type == "theater " %}
            <h4><i class="fa-solid fa-masks-theater me-2 "></i>{{organizer.name}}</h4>
            {% else %}
            <h4><i class="fa-solid fa-music me-2 "></i>{{organizer.name}}</h4>
            {% endif %}
            <div class="ms-5 ">
                <p>{{organizer.street}}</p>
                <p>{{organizer.city}}</p>
                <p><i class="fa-regular fa-envelope me-2 "></i>{{organizer.email}}</p>
                <p><i class="fa-solid fa-phone me-2 "></i>{{organizer.number}}</p>
            </div>
        </div>
        <!--iframe-->
        <iframe src="{{organizer.iframe}}" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    </div>
</div>

{% endblock %}