{% extends 'base.html.twig' %} {% block title %}Hello EventsController!{% endblock %} {% block body %}
<!--Hero-->{% include "components/hero-home.html.twig" %}

<!--Content-->

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h3>upcoming Events</h3>
        <a href="/create" class="me-0"><button class="button">new event</button></a></div>
    <div class="row row-cols-3">
        {% for event in events %}
        <div class="col mb-5">
            <div class="card">
                <img src="{{event.image}}" class="card-img-top" height="300">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a href="/details/{{event.id}}" class="mb-3">
                            <h5 class="card-title">{{event.name}}</h5>
                        </a>
                        <!--Buttons-->
                        <div class="dropdown">
                            <i class="fa-solid fa-ellipsis-vertical dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></i>
                            <ul class="dropdown-menu dropstart">
                                <li> <a class="dropdown-item" href="/edit/{{event.id}}">Edit</a></li>
                                <li><a class="dropdown-item" href="/delete/{{event.id}}">Delete</a></li>
                            </ul>
                        </div>

                    </div>
                    <p class="card-text">{{event.date | date("d M. Y")}}</p>

                </div>
            </div>
        </div>
        {% endfor %}

    </div>
</div>
{% endblock %}